# pnpm workspace configuration
node-linker=hoisted
shamefully-hoist=false
auto-install-peers=true
strict-peer-dependencies=false

# Windows compatibility
prefer-workspace-packages=true

# Prevent React version conflicts - don't hoist React/React-DOM to root
# Each workspace should have its own React version
public-hoist-pattern[]=!react
public-hoist-pattern[]=!react-dom
public-hoist-pattern[]=!@types/react
public-hoist-pattern[]=!@types/react-dom

# Note: bufferutil is optional and may fail to build on Windows - this is OK, it's only for WebSocket performance
