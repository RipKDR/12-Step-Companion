{
  "include": [
    "apps/web/src/**/*",
    "shared/**/*",
    "server/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./apps/web/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@packages/*": [
        "./packages/*"
      ],
      "@12-step-companion/api": [
        "./packages/api/src/trpc.ts"
      ],
      "@12-step-companion/api/*": [
        "./packages/api/src/*"
      ],
      "@12-step-companion/types": [
        "./packages/types/src/supabase.ts"
      ],
      "@12-step-companion/types/*": [
        "./packages/types/src/*"
      ]
    }
  }
}
